{
  "manifest_version": 3,
  "name": "Save Tweet to Blog",
  "version": "1.0.0",
  "description": "Save X/Twitter tweets to your blog bookmarks",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://talljack.me/*",
    "https://www.talljack.me/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
