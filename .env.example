# Blog Configuration Environment Variables
# Copy this file to .env.local and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_NAME="我的博客"
NEXT_PUBLIC_SITE_DESCRIPTION="分享技术心得与生活感悟"

# Google Analytics
# Get your tracking ID from https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Search Console Verification
# Get verification code from https://search.google.com/search-console
GOOGLE_SITE_VERIFICATION=your-google-verification-code

# Social Media Links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourusername
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername
NEXT_PUBLIC_EMAIL=your-email@example.com

# Giscus Comments Configuration (Optional)
# Get these values from https://giscus.app/
NEXT_PUBLIC_GISCUS_REPO=username/repository
NEXT_PUBLIC_GISCUS_REPO_ID=R_kgDOPknH_g
NEXT_PUBLIC_GISCUS_CATEGORY=Announcements
NEXT_PUBLIC_GISCUS_CATEGORY_ID=DIC_kwDOPknH_s4CunIR

# Author Information
NEXT_PUBLIC_AUTHOR_NAME="你的名字"
NEXT_PUBLIC_AUTHOR_BIO="全栈开发者，热爱技术与写作"
NEXT_PUBLIC_AUTHOR_AVATAR="/avatar.jpg"

# Security (Optional - for production)
# Generate a random string for API route protection
API_SECRET_KEY=your-random-secret-key-here

# Rate Limiting (Optional)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Development Settings
NODE_ENV=production

# Additional Features (Optional)
# Enable/disable features
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_RSS=true

# Content Settings
POSTS_PER_PAGE=10
MAX_RECENT_POSTS=10
MAX_POPULAR_POSTS=5
MAX_TAGS_DISPLAY=20

# Performance Settings
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=false
NEXT_PUBLIC_CACHE_MAX_AGE=3600