# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_SITE_NAME="Your Blog Name"
NEXT_PUBLIC_SITE_DESCRIPTION="Your blog description"

# Giscus Comments Configuration
NEXT_PUBLIC_GISCUS_REPO=your-username/your-repo
NEXT_PUBLIC_GISCUS_REPO_ID=your-repo-id
NEXT_PUBLIC_GISCUS_CATEGORY=Announcements
NEXT_PUBLIC_GISCUS_CATEGORY_ID=your-category-id

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Enable Features
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_RSS=true

# Author Information
NEXT_PUBLIC_AUTHOR_NAME="Your Name"
NEXT_PUBLIC_AUTHOR_BIO="Your bio"
NEXT_PUBLIC_AUTHOR_AVATAR="/avatar.jpg"

# Content Settings
POSTS_PER_PAGE=10
MAX_RECENT_POSTS=10
MAX_POPULAR_POSTS=5
MAX_TAGS_DISPLAY=20

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Vercel KV Configuration
# Get these values from Vercel Dashboard -> Storage -> Your KV Database -> .env.local tab
KV_URL=your-kv-url
KV_REST_API_URL=your-kv-rest-api-url
KV_REST_API_TOKEN=your-kv-rest-api-token
KV_REST_API_READ_ONLY_TOKEN=your-kv-rest-api-read-only-token
REDIS_URL=your-redis-url

# Site Verification (Optional)
GOOGLE_SITE_VERIFICATION=your-google-verification-code
BAIDU_SITE_VERIFICATION=your-baidu-verification-code
BING_SITE_VERIFICATION=your-bing-verification-code

# Admin Access (Optional)
# Set username and password to protect analytics dashboard
# Leave empty for development environments to allow unrestricted access
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password


# Newsletter Configuration
# Resend API for sending emails
RESEND_API_KEY=your-resend-api-key

# Email settings
EMAIL_FROM="Talljack Blog <noreply@your-domain.com>"

# Newsletter authentication key for sending
NEWSLETTER_AUTH_KEY=your-secret-newsletter-key

# Upstash Redis for storing subscribers (alternative to Vercel KV)
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token
